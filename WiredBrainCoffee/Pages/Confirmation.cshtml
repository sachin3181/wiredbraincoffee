@page
@model WiredBrainCoffee.Pages.ConfirmationModel
@{
    ViewData["Title"] = "Confirmation";
}

<div class="container contact-container">
    <h1 class="mt-4 mb-3">
        Thank you!
        <small>It'a always great to hear from you</small>
    </h1>
